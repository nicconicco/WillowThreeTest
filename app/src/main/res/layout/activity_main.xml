<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_background"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_background" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:gravity="center"
        android:text="@string/label_description"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnPracticeMode" />

    <Button
        android:id="@+id/btnPracticeMode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/blue_button_background"
        android:text="@string/label_practice_mode"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnTimedMode" />

    <Button
        android:id="@+id/btnTimedMode"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:layout_marginHorizontal="@dimen/dimen_20dp"
        android:layout_marginBottom="@dimen/dimen_20dp"
        android:background="@color/blue_button_background"
        android:text="@string/label_timed_mode"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>